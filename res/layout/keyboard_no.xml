        <Button
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:background="@drawable/button"
                android:layout_weight="1"
                android:tag="6"
                android:id="@+id/key6"
                android:text="F" android:layout_margin="4dp"/>

        <Button
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:background="@drawable/button"
                android:text="G"
                android:tag="7"
                android:id="@+id/key7"
                android:layout_weight="1" android:layout_margin="4dp"/>
    </TableRow>


    <TableRow
            android:id="@+id/row2"
