                android:layout_height="40dp"
                android:background="@drawable/button"
                android:text="A"
                android:tag="1"
                android:id="@+id/key1"
                android:layout_weight="1"
                android:clickable="false" android:layout_margin="4dp"/>

        <Button
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:background="@drawable/button"
                android:text="B"
                android:tag="2"
                android:id="@+id/key2"
                android:layout_weight="1"
                android:layout_margin="4dp"/>

        <Button
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:background="@drawable/button"
                android:text="C"
                android:tag="3"
                android:id="@+id/key3"
                android:layout_weight="1" android:layout_margin="4dp"/>

        <Button
