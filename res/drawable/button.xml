<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- BUTTON IS PRESSED -->
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#666666" />
            <gradient android:angle="-90" android:startColor="#666666" android:endColor="#666666" />
        </shape>
    </item>

    <!-- IN FOCUS-->
    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#383838" />
            <gradient android:angle="-90" android:startColor="#383838" android:endColor="#383838" />
        </shape>
    </item>


    <!-- SHAPE -->
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#535353" />
            <gradient android:angle="-90" android:startColor="#535353" android:endColor="#383838" />
        </shape>
    </item>
</selector>